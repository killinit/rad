<fieldset class="form__group">
  <legend class="l-<%= form_name %>__legend">
    <%= legend_text %>
  </legend>

  <%= f.form_row field do %>
    <%= f.collection_check_boxes(field_ids, collection, :id, :name) do |b| %>
      <div class="form__group-item">
        <%= b.label { b.check_box(class: "form__group-input #{test_class}") + b.text } %>
      </div>
    <% end %>
  <% end %>
</fieldset>
