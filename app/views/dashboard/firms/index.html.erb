<div class="l-constrained">
  <h2><%= t('dashboard.firms_index.firm_heading') %></h2>
  <div class="table-wrapper">
    <table>
      <thead>
        <tr>
          <th><%= Firm.human_attribute_name(:fca_number) %></th>
          <th><%= Firm.human_attribute_name(:registered_name) %></th>
          <th><%= t('dashboard.firms_index.principal_column_heading') %></th>
        </tr>
      </thead>
      <tbody>
        <tr class="t-parent-firm-table-row">
          <td class="frn t-frn"><%= @firm.fca_number %></td>
          <td class="firm-name t-firm-name"><%= @firm.registered_name %></td>
          <td class="principal-name t-principal-name"><%= @firm.principal.full_name %></td>
        </tr>
      </tbody>
    </table>
  </div>

  <div id="firm-list">
    <input class="fuzzy-search search firm-list__filter" placeholder="filter firms"/>
    <h2><%= t('dashboard.firms_index.trading_names_heading') %> </h2>
    <div class="table-wrapper">
      <table>
        <thead>
          <tr>
            <th><%= Firm.human_attribute_name(:fca_number) %></th>
            <th><%= Firm.human_attribute_name(:registered_name)  %></th>
            <th><%= t('dashboard.firms_index.principal_column_heading') %></th>
          </tr>
        </thead>
        <tbody class="list">
          <% @trading_names.each do |trading_name| %>
            <tr class="t-trading-name-table-row">
              <td class="frn t-frn"><%= trading_name.fca_number %></td>
              <td class="firm-name t-firm-name"><%= trading_name.registered_name %></td>
              <td class="principal-name t-principal-name"><%= trading_name.principal.full_name %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
