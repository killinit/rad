<%= form_for [current_user, current_user.firm, @adviser] do |f| %>
  <%= f.text_field :reference_number, class: 't-reference-number' %>

  <%= f.collection_check_boxes :qualification_ids, Qualification.all, :id, :name %>
  <%= f.collection_check_boxes :accreditation_ids, Accreditation.all, :id, :name %>
  <%= f.collection_check_boxes :professional_standing_ids, ProfessionalStanding.all, :id, :name %>
  <%= f.collection_check_boxes :professional_bodies, ProfessionalBody.all, :id, :name %>
<% end %>
