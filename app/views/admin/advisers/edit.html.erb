<h1>
  <%= @adviser.name %>
  <small><%= @adviser.reference_number %></small>
</h1>

<div class="panel panel-default">
  <div class="panel-body">
  <%= form_for([:admin, @adviser]) do |f| %>
    <% if @adviser.errors.any? %>
    <ul class="bg-danger">
    <% @adviser.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
    <% end %>

    <div class="form-group">
      <label for="adviser_postcode">Postcode</label>
      <%= f.text_field(:postcode, class: 'form-control') %>
    </div>

    <%= f.submit 'Save', class: 'btn btn-primary' %>
  <% end %>
  </div>
</div>
