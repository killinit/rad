<%= form_for(@form, url: choose_subsidiary_admin_move_advisers_path, method: :get) do |f| %>
  <div>
    <%= f.label :to_firm_fca_number, 'FCA Number of firm to move to:' %>
    <%= f.text_field :to_firm_fca_number, class: 't-to_firm_fca_number' %>
  </div>

  <div class="t-hidden-fields">
    <% @form.adviser_ids.each do |adviser_id| %>
      <%= f.hidden_field(:adviser_ids, multiple: true, value: adviser_id, class: 't-adviser') %>
    <% end %>
  </div>

  <div class="form-group">
    <%= f.submit('Next', class: 't-next') %>
  </div>
<% end %>
