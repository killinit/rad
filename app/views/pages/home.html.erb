<div class="l-constrained">
  <a href="" class="l-advisor-sign-in"><%= t('adviser_sign_in') %></a>

  <section class="l-pre-qualification-questions">
    <%= heading_tag(t('registration.heading'), level: 1, class: 'l-pre-qualification-questions__heading') %>
    <p class="l-pre-qualification-questions__subheading"><%= t('registration.subheading') %></p>

    <form class="l-pre-qualification-questions__form">
      <fieldset class="l-pre-qualification-questions__question-group">
        <legend class="l-pre-qualification-questions__question"><%= t('registration.question_one.heading') %></legend>
        <p><%= t('registration.question_one.explanation') %></p>
        <label class="l-pre-qualification-questions__label"><input class="l-pre-qualification-questions__input" type="radio" name="question_one_group" checked="checked"/><%= t('registration.answer_yes') %></label>
        <label class="l-pre-qualification-questions__label"><input class="l-pre-qualification-questions__input" type="radio" name="question_one_group" /><%= t('registration.answer_no') %></label>
      </fieldset>

      <fieldset class="l-pre-qualification-questions__question-group">
        <legend class="l-pre-qualification-questions__question"><%= t('registration.question_two.heading') %></legend>
        <p><%= t('registration.question_two.explanation') %></p>
        <label class="l-pre-qualification-questions__label"><input class="l-pre-qualification-questions__input" type="radio" name="question_two_group" checked="checked"/><%= t('registration.answer_yes') %></label>
        <label class="l-pre-qualification-questions__label"><input class="l-pre-qualification-questions__input" type="radio" name="question_two_group" /><%= t('registration.answer_no') %></label>
      </fieldset>

      <fieldset class="l-pre-qualification-questions__question-group">
        <legend class="l-pre-qualification-questions__question"><%= t('registration.question_three.heading') %></legend>
        <p><%= t('registration.question_three.explanation') %></p>
        <label class="l-pre-qualification-questions__label"><input class="l-pre-qualification-questions__input" type="radio" name="question_three_group" checked="checked"/><%= t('registration.answer_yes') %></label>
        <label class="l-pre-qualification-questions__label"><input class="l-pre-qualification-questions__input" type="radio" name="question_three_group" /><%= t('registration.answer_no') %></label>
      </fieldset>
    </form>

    <%= button_primary t('registration.button_next') %>
  </section
</div>
